<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-tittle text-white">
            <i class="far fa-image"></i> Upload and image
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" id="inputGroup" class="custom-file-input" aria-describedby="inputGroupFileAddon" required>
                        <label for="inputGroup" class="custom-file-label">Choose File</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder=" Tittle for te image" required>
            </div>
            <div class="form group">
                <textarea name="description" rows="2" class="form-control" placeholder="Description for the image" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-uoliad"></i>
                    Upload image
                </button>
            </div>
        </form>
    </div>
</div>